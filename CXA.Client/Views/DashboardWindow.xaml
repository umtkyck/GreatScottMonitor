<Window x:Class="CXA.Client.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CXA - Face Management Dashboard" Height="750" Width="1100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Card Hover Animation -->
            <Storyboard x:Key="CardHover">
                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                 To="30" Duration="0:0:0.2"/>
            </Storyboard>
            
            <!-- Pulse Animation for Status -->
            <Storyboard x:Key="StatusPulse" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="StatusGlow"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0.3" To="0.8" Duration="0:0:1.5" AutoReverse="True">
                    <DoubleAnimation.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource StatusPulse}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Container with Glass Effect -->
    <Border CornerRadius="20" ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A0E14" Offset="0"/>
                <GradientStop Color="#0D1117" Offset="0.3"/>
                <GradientStop Color="#161B22" Offset="0.7"/>
                <GradientStop Color="#0D1117" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="50" ShadowDepth="0" Opacity="0.9" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 HEADER BAR
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="#0D1117" BorderBrush="#21262D" BorderThickness="0,0,0,1">
                <Grid Margin="24,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="44" Height="44" CornerRadius="12" Margin="0,0,16,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#58A6FF" Offset="0"/>
                                    <GradientStop Color="#A371F7" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Path Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M12,5A3,3 0 0,1 15,8A3,3 0 0,1 12,11A3,3 0 0,1 9,8A3,3 0 0,1 12,5M17.13,17C15.92,18.85 14.11,20.24 12,20.92C9.89,20.24 8.08,18.85 6.87,17C6.53,16.5 6.24,16 6,15.47C6,13.82 8.71,12.47 12,12.47C15.29,12.47 18,13.79 18,15.47C17.76,16 17.47,16.5 17.13,17Z"
                                  Fill="White" Stretch="Uniform" Width="22" Height="22"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Face Management" FontSize="20" FontWeight="SemiBold" 
                                       Foreground="#F0F6FC" FontFamily="Segoe UI Variable"/>
                            <TextBlock Text="Dashboard" FontSize="11" Foreground="#8B949E" 
                                       Margin="0,-2,0,0" FontFamily="Segoe UI Variable"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Search Bar -->
                    <Border Grid.Column="1" Margin="40,0" MaxWidth="400" Height="40" 
                            CornerRadius="20" Background="#21262D" VerticalAlignment="Center">
                        <Grid Margin="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Grid.Column="0" Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                  Fill="#8B949E" Width="16" Height="16" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBox Grid.Column="1" x:Name="SearchBox" Background="Transparent" 
                                     BorderThickness="0" Foreground="#F0F6FC" FontSize="13"
                                     VerticalAlignment="Center" Text="" CaretBrush="#58A6FF">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <TextBlock Text="Search faces..." Foreground="#484F58" 
                                                                   Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                   VerticalAlignment="Center"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Add New Face Button -->
                    <Button Grid.Column="2" Style="{StaticResource PrimaryButton}" 
                            Padding="20,10" Margin="0,0,16,0" Click="AddNewFace_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Face" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Style="{StaticResource IconButton}" Click="MinimizeButton_Click" Width="36" Height="36">
                            <Path Data="M20,14H4V10H20" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  Width="12" Height="12" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource IconButton}" Click="MaximizeButton_Click" Width="36" Height="36">
                            <Path Data="M4,4H20V20H4V4M6,8V18H18V8H6Z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  Width="12" Height="12" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource IconButton}" Click="CloseButton_Click" Width="36" Height="36">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  Width="12" Height="12" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 MAIN CONTENT
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="1" Margin="24,24,24,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     LEFT SIDEBAR - Stats & Quick Actions
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                    
                    <!-- System Status Card -->
                    <Border Style="{StaticResource GlassCard}" Padding="20" Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                <Canvas Width="50" Height="50" Margin="0,0,16,0">
                                    <!-- Glow -->
                                    <Ellipse x:Name="StatusGlow" Width="50" Height="50" Opacity="0.5">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#403FB950" Offset="0"/>
                                                <GradientStop Color="#003FB950" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <!-- Status Dot -->
                                    <Ellipse x:Name="StatusDot" Width="20" Height="20" 
                                             Canvas.Left="15" Canvas.Top="15">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="#3FB950"/>
                                        </Ellipse.Fill>
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" 
                                                              Opacity="0.8" Color="#3FB950"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                </Canvas>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="StatusText" Text="System Active" FontSize="16" 
                                               FontWeight="SemiBold" Foreground="#F0F6FC"/>
                                    <TextBlock Text="All services running" FontSize="11" Foreground="#8B949E"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Border Grid.Row="1" Background="#161B22" CornerRadius="8" Padding="12">
                                <TextBlock x:Name="LastSyncText" Text="Last sync: Just now" 
                                           FontSize="11" Foreground="#8B949E" TextAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Statistics Cards -->
                    <Border Style="{StaticResource GlassCard}" Padding="20" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="STATISTICS" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="#8B949E" Margin="0,0,0,16" />
                            
                            <!-- Total Faces -->
                            <Border Background="#161B22" CornerRadius="12" Padding="16" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" 
                                            Background="#1F3A5F" Margin="0,0,14,0">
                                        <TextBlock Text="ðŸ‘¤" FontSize="20" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock x:Name="TotalFacesText" Text="0" FontSize="24" 
                                                   FontWeight="Bold" Foreground="#58A6FF"/>
                                        <TextBlock Text="Enrolled Faces" FontSize="11" Foreground="#8B949E"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Authentications Today -->
                            <Border Background="#161B22" CornerRadius="12" Padding="16" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" 
                                            Background="#1A3D2A" Margin="0,0,14,0">
                                        <TextBlock Text="âœ“" FontSize="20" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" Foreground="#3FB950"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock x:Name="AuthsTodayText" Text="0" FontSize="24" 
                                                   FontWeight="Bold" Foreground="#3FB950"/>
                                        <TextBlock Text="Auths Today" FontSize="11" Foreground="#8B949E"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Success Rate -->
                            <Border Background="#161B22" CornerRadius="12" Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" 
                                            Background="#2D1F3D" Margin="0,0,14,0">
                                        <TextBlock Text="ðŸ“Š" FontSize="20" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock x:Name="SuccessRateText" Text="--%" FontSize="24" 
                                                   FontWeight="Bold" Foreground="#A371F7"/>
                                        <TextBlock Text="Success Rate" FontSize="11" Foreground="#8B949E"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions -->
                    <Border Style="{StaticResource GlassCard}" Padding="20">
                        <StackPanel>
                            <TextBlock Text="QUICK ACTIONS" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="#8B949E" Margin="0,0,0,16" />
                            
                            <Button Content="ðŸ”„  Sync All Faces" Style="{StaticResource ModernButton}" 
                                    Margin="0,0,0,8" Click="SyncFaces_Click"/>
                            <Button Content="ðŸ“¤  Export Data" Style="{StaticResource ModernButton}" 
                                    Margin="0,0,0,8" Click="ExportData_Click"/>
                            <Button Content="ðŸ“‹  View Audit Log" Style="{StaticResource ModernButton}" 
                                    Click="ViewAuditLog_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     MAIN AREA - Face Grid
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Enrolled Faces" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#F0F6FC" VerticalAlignment="Center"/>
                        <Border Background="#21262D" CornerRadius="10" Padding="8,4" Margin="12,0,0,0">
                            <TextBlock x:Name="FaceCountBadge" Text="0" FontSize="12" 
                                       Foreground="#8B949E" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <!-- Face Cards Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled">
                        <Grid>
                            <!-- Empty State -->
                            <Border x:Name="EmptyState" Style="{StaticResource GlassCard}" 
                                    Padding="60" Visibility="Visible">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border Width="100" Height="100" CornerRadius="50" 
                                            Background="#21262D" Margin="0,0,0,24">
                                        <TextBlock Text="ðŸ‘¤" FontSize="48" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" Opacity="0.4"/>
                                    </Border>
                                    <TextBlock Text="No faces enrolled yet" FontSize="20" 
                                               FontWeight="SemiBold" Foreground="#F0F6FC" 
                                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Add your first face to get started with biometric authentication" 
                                               FontSize="14" Foreground="#8B949E" TextAlignment="Center"
                                               TextWrapping="Wrap" MaxWidth="300" Margin="0,0,0,24"/>
                                    <Button Content="âž•  Enroll New Face" Style="{StaticResource PrimaryButton}"
                                            Padding="24,12" Click="AddNewFace_Click"/>
                                </StackPanel>
                            </Border>

                            <!-- Face Cards ItemsControl -->
                            <ItemsControl x:Name="FacesGrid" Visibility="Collapsed">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource GlassCard}" Width="220" Margin="0,0,16,16" 
                                                Padding="0" ClipToBounds="True" Cursor="Hand"
                                                MouseEnter="FaceCard_MouseEnter" MouseLeave="FaceCard_MouseLeave">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="140"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Face Preview Area -->
                                                <Border Grid.Row="0" CornerRadius="16,16,0,0">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#1F3A5F" Offset="0"/>
                                                            <GradientStop Color="#161B22" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Grid>
                                                        <!-- Avatar Circle -->
                                                        <Border Width="80" Height="80" CornerRadius="40" 
                                                                Background="#21262D">
                                                            <TextBlock Text="{Binding Initials}" FontSize="28" 
                                                                       FontWeight="SemiBold" Foreground="#58A6FF"
                                                                       HorizontalAlignment="Center" 
                                                                       VerticalAlignment="Center"/>
                                                        </Border>
                                                        <!-- Status Badge -->
                                                        <Border HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                Margin="0,12,12,0" CornerRadius="10" 
                                                                Background="{Binding StatusColor}" Padding="8,4">
                                                            <TextBlock Text="{Binding StatusText}" FontSize="10" 
                                                                       Foreground="White" FontWeight="SemiBold"/>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                                
                                                <!-- Info Section -->
                                                <StackPanel Grid.Row="1" Margin="16">
                                                    <TextBlock Text="{Binding Name}" FontSize="15" 
                                                               FontWeight="SemiBold" Foreground="#F0F6FC"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding Role}" FontSize="12" 
                                                               Foreground="#8B949E" Margin="0,2,0,12"/>
                                                    
                                                    <!-- Meta Info -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                                        <TextBlock Text="ðŸ“…" FontSize="11" Margin="0,0,6,0"/>
                                                        <TextBlock Text="{Binding EnrolledDate}" FontSize="11" 
                                                                   Foreground="#8B949E"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Action Buttons -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="8"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Button Grid.Column="0" Content="Edit" 
                                                                Style="{StaticResource ModernButton}"
                                                                Padding="0,8" FontSize="12"
                                                                Click="EditFace_Click" Tag="{Binding}"/>
                                                        <Button Grid.Column="2" Content="Delete" 
                                                                Style="{StaticResource ModernButton}"
                                                                Padding="0,8" FontSize="12" Foreground="#F85149"
                                                                Click="DeleteFace_Click" Tag="{Binding}"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 FOOTER - Version & Security Info
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="1" VerticalAlignment="Bottom" Margin="24,0,24,16" IsHitTestVisible="False">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Opacity="0.5">
                    <Path Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1Z"
                          Fill="#8B949E" Width="12" Height="12" Stretch="Uniform" Margin="0,0,8,0"/>
                    <TextBlock FontSize="10" Foreground="#8B949E" FontFamily="Segoe UI Variable">
                        <Run Text="CXA "/>
                        <Run Text="{Binding AppVersion}"/>
                        <Run Text=" â€¢ HIPAA Compliant â€¢ AES-256 Encrypted"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
