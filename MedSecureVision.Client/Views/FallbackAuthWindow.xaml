<Window x:Class="MedSecureVision.Client.Views.FallbackAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alternative Authentication" Height="400" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="20">
            <TextBlock Text="Alternative Authentication" 
                      Foreground="White" 
                      FontSize="20" 
                      FontWeight="Bold"/>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="40">
            <TextBlock Text="Face recognition failed. Please use an alternative method:"
                      Foreground="White"
                      FontSize="14"
                      Margin="0,0,0,30"
                      TextWrapping="Wrap"/>

            <!-- PIN Entry -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Enter PIN:" 
                          Foreground="White"
                          FontSize="14"
                          Margin="0,0,0,10"/>
                <PasswordBox Name="PinBox"
                            Width="200"
                            Height="35"
                            FontSize="16"
                            HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Or use Windows Hello -->
            <TextBlock Text="OR" 
                      Foreground="White"
                      FontSize="12"
                      HorizontalAlignment="Center"
                      Margin="0,10,0,20"/>
            
            <Button Name="WindowsHelloButton"
                   Content="Use Windows Hello"
                   Width="200"
                   Height="40"
                   Click="WindowsHelloButton_Click"/>
        </StackPanel>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="AuthenticateButton"
                       Content="Authenticate"
                       Width="120"
                       Height="40"
                       Margin="10,0"
                       Click="AuthenticateButton_Click"/>
                <Button Name="CancelButton"
                       Content="Cancel"
                       Width="120"
                       Height="40"
                       Margin="10,0"
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

