<Window x:Class="MedSecureVision.Client.Views.AppleStyleEnrollmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Enrollment" Height="700" Width="480"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Rotating Arrow Animation -->
            <Storyboard x:Key="RotateArrowAnimation" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="DirectionArrow"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                 From="0" To="360" Duration="0:0:4">
                    <DoubleAnimation.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>

            <!-- Pulse Glow Animation -->
            <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="GlowRing"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0.3" To="0.7" Duration="0:0:1.2" AutoReverse="True">
                    <DoubleAnimation.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>

            <!-- Success Animation -->
            <Storyboard x:Key="SuccessAnimation">
                <DoubleAnimation Storyboard.TargetName="SuccessCheckmark"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="1" Duration="0:0:0.3"/>
                <DoubleAnimation Storyboard.TargetName="SuccessCheckmark"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                 From="0" To="1" Duration="0:0:0.4">
                    <DoubleAnimation.EasingFunction>
                        <ElasticEase Oscillations="1" Springiness="5"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Storyboard.TargetName="SuccessCheckmark"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                 From="0" To="1" Duration="0:0:0.4">
                    <DoubleAnimation.EasingFunction>
                        <ElasticEase Oscillations="1" Springiness="5"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource RotateArrowAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Container -->
    <Border CornerRadius="24" ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1117" Offset="0"/>
                <GradientStop Color="#161B22" Offset="0.5"/>
                <GradientStop Color="#0D1117" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="50" ShadowDepth="0" Opacity="0.9" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════
                 HEADER - Apple Style Minimal
            ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="0" Margin="24,24,24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back/Cancel Button -->
                <Button Grid.Column="0" Style="{StaticResource IconButton}" Click="Cancel_Click"
                        Width="40" Height="40">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#8B949E" Width="20" Height="20" Stretch="Uniform"/>
                </Button>

                <!-- Title -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderTitle" Text="Face ID" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#F0F6FC" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="HeaderSubtitle" Text="Set Up Face ID" FontSize="13" 
                               Foreground="#8B949E" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Placeholder for symmetry -->
                <Border Grid.Column="2" Width="40"/>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════
                 MAIN - Circular Face Scanner (Apple Style)
            ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="1" Margin="40,30,40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Circular Scanner Container -->
                <Viewbox Grid.Row="0" MaxWidth="320" MaxHeight="320" Stretch="Uniform">
                    <Canvas Width="300" Height="300">
                        
                        <!-- Outer Glow Ring -->
                        <Ellipse x:Name="GlowRing" Width="300" Height="300" Opacity="0.5">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#2058A6FF" Offset="0.7"/>
                                    <GradientStop Color="#0058A6FF" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Background Circle (Gray track) -->
                        <Ellipse Width="280" Height="280" Canvas.Left="10" Canvas.Top="10"
                                 Stroke="#30363D" StrokeThickness="8" Fill="Transparent"/>

                        <!-- Progress Ring (Fills as you scan) -->
                        <Path x:Name="ProgressArc" StrokeThickness="8" Fill="Transparent"
                              Canvas.Left="10" Canvas.Top="10"
                              StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                            <Path.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#58A6FF" Offset="0"/>
                                    <GradientStop Color="#3FB950" Offset="0.5"/>
                                    <GradientStop Color="#A371F7" Offset="1"/>
                                </LinearGradientBrush>
                            </Path.Stroke>
                            <Path.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.6" Color="#58A6FF"/>
                            </Path.Effect>
                        </Path>

                        <!-- Camera Feed Circle (Clipped) -->
                        <Ellipse Width="260" Height="260" Canvas.Left="20" Canvas.Top="20">
                            <Ellipse.Fill>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Image x:Name="CameraFeedBrush" Stretch="UniformToFill"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Alternative: Direct Camera Feed with Clip -->
                        <Border Canvas.Left="20" Canvas.Top="20" Width="260" Height="260" 
                                CornerRadius="130" ClipToBounds="True">
                            <Image x:Name="CameraFeed" Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>

                        <!-- Direction Arrow (Rotates around) -->
                        <Canvas x:Name="DirectionArrow" Width="300" Height="300" 
                                RenderTransformOrigin="0.5,0.5">
                            <Canvas.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Canvas.RenderTransform>
                            <!-- Arrow pointing outward at top -->
                            <Path Data="M150,15 L140,35 L150,30 L160,35 Z" 
                                  Fill="#58A6FF">
                                <Path.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.8" Color="#58A6FF"/>
                                </Path.Effect>
                            </Path>
                        </Canvas>

                        <!-- Success Checkmark (Hidden initially) -->
                        <Canvas x:Name="SuccessCheckmark" Width="300" Height="300" 
                                Opacity="0" RenderTransformOrigin="0.5,0.5">
                            <Canvas.RenderTransform>
                                <ScaleTransform ScaleX="0" ScaleY="0"/>
                            </Canvas.RenderTransform>
                            <Ellipse Width="120" Height="120" Canvas.Left="90" Canvas.Top="90">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#3FB950" Offset="0"/>
                                        <GradientStop Color="#238636" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Path Data="M115,150 L140,175 L185,125" 
                                  Stroke="White" StrokeThickness="8"
                                  StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"/>
                        </Canvas>

                    </Canvas>
                </Viewbox>

                <!-- Instruction Text -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock x:Name="InstructionText" 
                               Text="Move your head slowly to complete the circle"
                               FontSize="16" Foreground="#F0F6FC" TextAlignment="Center"
                               FontFamily="Segoe UI Variable" TextWrapping="Wrap"/>
                    <TextBlock x:Name="ScanPhaseText" 
                               Text="First scan..."
                               FontSize="13" Foreground="#8B949E" TextAlignment="Center"
                               FontFamily="Segoe UI Variable" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════
                 PROGRESS INDICATOR
            ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="2" Margin="40,0,40,20">
                <!-- Progress Bar -->
                <Border Height="6" CornerRadius="3" Background="#21262D">
                    <Border x:Name="ProgressBar" Height="6" CornerRadius="3" 
                            HorizontalAlignment="Left" Width="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#58A6FF" Offset="0"/>
                                <GradientStop Color="#3FB950" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════
                 ACTION BUTTON
            ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="3" Margin="40,0,40,40">
                <Button x:Name="ActionButton" Content="Get Started" 
                        Style="{StaticResource PrimaryButton}" 
                        Height="50" FontSize="16"
                        Click="ActionButton_Click"/>
            </Grid>

        </Grid>
    </Border>
</Window>

