<Window x:Class="MedSecureVision.Client.Views.EnrollmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Enrollment" Height="700" Width="520"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Progress Animation -->
            <Storyboard x:Key="ProgressPulse" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="ProgressGlow" 
                                 Storyboard.TargetProperty="Opacity"
                                 From="0.3" To="0.8" Duration="0:0:1" AutoReverse="True"/>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource ProgressPulse}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Container -->
    <Border CornerRadius="24" ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1117" Offset="0"/>
                <GradientStop Color="#161B22" Offset="0.5"/>
                <GradientStop Color="#0D1117" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.8" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════
                 HEADER
            ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="0" Margin="24,20,24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- User Icon -->
                    <Border Width="36" Height="36" CornerRadius="10" Margin="0,0,12,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#3FB950" Offset="0"/>
                                <GradientStop Color="#238636" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                              Fill="White" Stretch="Uniform" Width="18" Height="18"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Face Enrollment" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#F0F6FC" FontFamily="Segoe UI Variable"/>
                        <TextBlock Text="Register your face for authentication" FontSize="11" 
                                   Foreground="#8B949E" FontFamily="Segoe UI Variable"/>
                    </StackPanel>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="1" Style="{StaticResource IconButton}" Click="CloseButton_Click">
                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                          Width="12" Height="12" Stretch="Uniform"/>
                </Button>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════
                 PROGRESS INDICATOR
            ═══════════════════════════════════════════════════════════════ -->
            <Border Grid.Row="1" Margin="24,20,24,0" Background="#21262D" CornerRadius="12" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="StepTitle" Text="Step 1 of 4" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#F0F6FC" Margin="0,0,0,4" FontFamily="Segoe UI Variable"/>
                        <TextBlock x:Name="StepDescription" Text="Look straight at the camera" 
                                   FontSize="12" Foreground="#8B949E" FontFamily="Segoe UI Variable"/>
                    </StackPanel>

                    <!-- Circular Progress -->
                    <Grid Grid.Column="1" Width="50" Height="50">
                        <Ellipse x:Name="ProgressGlow" Fill="#3FB950" Opacity="0.3"/>
                        <Ellipse Stroke="#30363D" StrokeThickness="4" Fill="Transparent"/>
                        <Ellipse x:Name="ProgressRing" Stroke="#3FB950" StrokeThickness="4" 
                                 Fill="Transparent" StrokeDashArray="1,3" StrokeDashOffset="0"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="-90"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <TextBlock x:Name="ProgressText" Text="0/8" FontSize="12" FontWeight="SemiBold"
                                   Foreground="#F0F6FC" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontFamily="Segoe UI Variable"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════
                 CAMERA FEED
            ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="2" Margin="24,16,24,16">
                <Border CornerRadius="20" ClipToBounds="True">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#1C2128" Offset="0"/>
                            <GradientStop Color="#0D1117" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <!-- Camera Feed -->
                        <Image Name="CameraFeed" Stretch="UniformToFill" Source="{Binding CameraFeed}"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <!-- Vignette -->
                        <Border CornerRadius="20">
                            <Border.Background>
                                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
                                    <GradientStop Color="#00000000" Offset="0.3"/>
                                    <GradientStop Color="#60000000" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Face Guide -->
                        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Width="240" Height="300">
                            <!-- Glow -->
                            <Ellipse Width="260" Height="320" Canvas.Left="-10" Canvas.Top="-10" Opacity="0.4">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#303FB950" Offset="0.7"/>
                                        <GradientStop Color="#003FB950" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Main Guide -->
                            <Ellipse x:Name="FaceGuide" Width="240" Height="300" StrokeThickness="3" Fill="Transparent">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3FB950" Offset="0"/>
                                        <GradientStop Color="#58A6FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.6" Color="#3FB950"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Direction Arrow (for head turn instructions) -->
                            <Path x:Name="DirectionArrow" 
                                  Data="M8,5.14V19.14L19,12.14L8,5.14Z"
                                  Fill="#3FB950" Stretch="Uniform" Width="30" Height="30"
                                  Canvas.Left="250" Canvas.Top="135" Opacity="0"/>
                        </Canvas>

                        <!-- Capture Flash Effect -->
                        <Border x:Name="CaptureFlash" Background="White" Opacity="0" CornerRadius="20"/>

                        <!-- Status Message -->
                        <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"
                                Background="#E021262D" CornerRadius="20" Padding="20,10">
                            <TextBlock x:Name="StatusMessage" Text="Position your face in the frame" 
                                       FontSize="14" Foreground="#F0F6FC" FontFamily="Segoe UI Variable"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════
                 CONTROLS
            ═══════════════════════════════════════════════════════════════ -->
            <Border Grid.Row="3" Margin="24,0,24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Cancel" Style="{StaticResource ModernButton}"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="2" x:Name="CaptureButton" Style="{StaticResource PrimaryButton}"
                            Click="CaptureButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="White" Margin="0,0,10,0"/>
                            <TextBlock Text="Capture" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="4" x:Name="CompleteButton" Content="Done" 
                            Style="{StaticResource ModernButton}" Click="CompleteButton_Click"
                            IsEnabled="False" Opacity="0.5"/>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
