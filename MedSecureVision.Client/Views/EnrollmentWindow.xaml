<Window x:Class="MedSecureVision.Client.Views.EnrollmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Enrollment" Height="700" Width="900"
        WindowStyle="None" AllowsTransparency="True" Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="20">
            <TextBlock Text="Face Enrollment" 
                      Foreground="White" 
                      FontSize="24" 
                      FontWeight="Bold"/>
        </Border>

        <!-- Camera Feed with Instructions -->
        <Grid Grid.Row="1">
            <Image Name="CameraFeed" 
                   Stretch="UniformToFill" 
                   Source="{Binding CameraFeed}"/>
            
            <!-- Face Guide -->
            <Ellipse Name="FaceGuide"
                     Width="300" Height="400"
                     Stroke="#00FF00"
                     StrokeThickness="3"
                     Opacity="0.8"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>

            <!-- Step Instructions -->
            <StackPanel VerticalAlignment="Bottom" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,150">
                <TextBlock Text="{Binding CurrentStep}" 
                          Foreground="White"
                          FontSize="20"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                <TextBlock Text="{Binding StatusMessage}"
                          Foreground="White"
                          FontSize="16"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Progress Indicator -->
            <StackPanel VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       Margin="20,20,20,0">
                <TextBlock Text="{Binding CapturedFrames, StringFormat='Captured: {0}/8'}"
                          Foreground="White"
                          FontSize="14"/>
            </StackPanel>
        </Grid>

        <!-- Controls -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="CaptureButton"
                       Content="Capture"
                       Width="120"
                       Height="40"
                       Margin="10,0"
                       Click="CaptureButton_Click"/>
                <Button Name="CompleteButton"
                       Content="Complete Enrollment"
                       Width="180"
                       Height="40"
                       Margin="10,0"
                       Click="CompleteButton_Click"/>
                <Button Name="CancelButton"
                       Content="Cancel"
                       Width="120"
                       Height="40"
                       Margin="10,0"
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

