<Window x:Class="MedSecureVision.Client.Views.EnrollmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Enrollment" Height="700" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Rotating Animation for Progress Ring -->
            <Storyboard x:Key="RotateProgressRing" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="ProgressRingTransform"
                                 Storyboard.TargetProperty="Angle"
                                 From="0" To="360" Duration="0:0:3"/>
            </Storyboard>

            <!-- Pulse Animation -->
            <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="FaceGuideGlow"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0.3" To="0.7" Duration="0:0:1" AutoReverse="True">
                    <DoubleAnimation.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource RotateProgressRing}"/>
            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Container -->
    <Border CornerRadius="24" ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1117" Offset="0"/>
                <GradientStop Color="#161B22" Offset="0.5"/>
                <GradientStop Color="#0D1117" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="50" ShadowDepth="0" Opacity="0.9" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 HEADER
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="0" Margin="24,20,24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="StepTitle" Text="Face Enrollment" FontSize="22" FontWeight="SemiBold" 
                               Foreground="#F0F6FC" FontFamily="Segoe UI Variable"/>
                    <TextBlock x:Name="StepDescription" Text="Position your face in the frame" 
                               FontSize="13" Foreground="#8B949E" FontFamily="Segoe UI Variable"/>
                </StackPanel>

                <Button Grid.Column="1" Style="{StaticResource IconButton}" Click="CloseButton_Click">
                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                          Width="12" Height="12" Stretch="Uniform"/>
                </Button>
            </Grid>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 PROGRESS BAR (Apple-like segments)
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="1" Margin="24,16,24,0" Height="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 8 Progress Segments -->
                <Border x:Name="Segment1" Grid.Column="0" CornerRadius="3" Background="#30363D"/>
                <Border x:Name="Segment2" Grid.Column="2" CornerRadius="3" Background="#30363D"/>
                <Border x:Name="Segment3" Grid.Column="4" CornerRadius="3" Background="#30363D"/>
                <Border x:Name="Segment4" Grid.Column="6" CornerRadius="3" Background="#30363D"/>
                <Border x:Name="Segment5" Grid.Column="8" CornerRadius="3" Background="#30363D"/>
                <Border x:Name="Segment6" Grid.Column="10" CornerRadius="3" Background="#30363D"/>
                <Border x:Name="Segment7" Grid.Column="12" CornerRadius="3" Background="#30363D"/>
                <Border x:Name="Segment8" Grid.Column="14" CornerRadius="3" Background="#30363D"/>
            </Grid>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 CAMERA AREA with Apple-like circular progress
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="2" Margin="32,20,32,20">
                <Border CornerRadius="20" ClipToBounds="True">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#1C2128" Offset="0"/>
                            <GradientStop Color="#0D1117" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <!-- Camera Feed -->
                        <Image x:Name="CameraFeed" Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <!-- Vignette -->
                        <Border CornerRadius="20">
                            <Border.Background>
                                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.6" RadiusY="0.6">
                                    <GradientStop Color="#00000000" Offset="0.5"/>
                                    <GradientStop Color="#90000000" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Apple-like Face Scan Container -->
                        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Width="280" Height="280">

                            <!-- Outer Glow -->
                            <Ellipse x:Name="FaceGuideGlow" Width="300" Height="300" 
                                     Canvas.Left="-10" Canvas.Top="-10" Opacity="0.5">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#2058A6FF" Offset="0.7"/>
                                        <GradientStop Color="#0058A6FF" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Progress Ring (circular segments like Apple) -->
                            <Ellipse Width="280" Height="280" StrokeThickness="4" Fill="Transparent"
                                     Stroke="#30363D" StrokeDashArray="1,0.3" StrokeDashCap="Round"/>

                            <!-- Active Progress Ring (fills as scan progresses) -->
                            <Ellipse x:Name="ProgressRing" Width="280" Height="280" StrokeThickness="4" 
                                     Fill="Transparent" StrokeDashCap="Round"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#58A6FF" Offset="0"/>
                                        <GradientStop Color="#3FB950" Offset="0.5"/>
                                        <GradientStop Color="#A371F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                                <Ellipse.StrokeDashArray>
                                    <DoubleCollection>0,100</DoubleCollection>
                                </Ellipse.StrokeDashArray>
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="ProgressRingTransform" Angle="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <!-- Face Guide Ellipse -->
                            <Ellipse x:Name="FaceGuide" Width="240" Height="280" 
                                     Canvas.Left="20" Canvas.Top="0"
                                     StrokeThickness="3" Fill="Transparent">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#58A6FF" Offset="0"/>
                                        <GradientStop Color="#A371F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.6" Color="#58A6FF"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Direction Arrow (shows which way to turn) -->
                            <Canvas x:Name="DirectionArrow" Width="50" Height="50" 
                                    Canvas.Left="115" Canvas.Top="290" Opacity="0">
                                <Path Data="M10,25 L25,10 L40,25 M25,10 L25,45" 
                                      Stroke="#58A6FF" StrokeThickness="3"
                                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                            </Canvas>

                            <!-- Capture Flash -->
                            <Ellipse x:Name="CaptureFlash" Width="280" Height="280" 
                                     Fill="White" Opacity="0"/>

                        </Canvas>

                        <!-- Section Progress Indicators (8 dots around the face) -->
                        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Height="320">
                            <Ellipse x:Name="Dot1" Width="12" Height="12" Canvas.Left="154" Canvas.Top="0" Fill="#30363D"/>
                            <Ellipse x:Name="Dot2" Width="12" Height="12" Canvas.Left="260" Canvas.Top="50" Fill="#30363D"/>
                            <Ellipse x:Name="Dot3" Width="12" Height="12" Canvas.Left="300" Canvas.Top="154" Fill="#30363D"/>
                            <Ellipse x:Name="Dot4" Width="12" Height="12" Canvas.Left="260" Canvas.Top="260" Fill="#30363D"/>
                            <Ellipse x:Name="Dot5" Width="12" Height="12" Canvas.Left="154" Canvas.Top="300" Fill="#30363D"/>
                            <Ellipse x:Name="Dot6" Width="12" Height="12" Canvas.Left="50" Canvas.Top="260" Fill="#30363D"/>
                            <Ellipse x:Name="Dot7" Width="12" Height="12" Canvas.Left="10" Canvas.Top="154" Fill="#30363D"/>
                            <Ellipse x:Name="Dot8" Width="12" Height="12" Canvas.Left="50" Canvas.Top="50" Fill="#30363D"/>
                        </Canvas>

                    </Grid>
                </Border>
            </Grid>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 STATUS MESSAGE
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="24,0,24,16">
                <TextBlock x:Name="StatusMessage" Text="Move your head slowly in a circle"
                           FontSize="15" Foreground="#F0F6FC" TextAlignment="Center"
                           FontFamily="Segoe UI Variable" FontWeight="Medium"/>
                <TextBlock x:Name="ProgressText" Text="0/8 captured"
                           FontSize="12" Foreground="#8B949E" TextAlignment="Center"
                           FontFamily="Segoe UI Variable" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 BUTTONS
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="4" Margin="24,0,24,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CaptureButton" Grid.Column="0" Content="ðŸ“· Capture" 
                        Style="{StaticResource PrimaryButton}" Height="48"
                        Click="CaptureButton_Click"/>
                <Button x:Name="CompleteButton" Grid.Column="2" Content="âœ“ Complete" 
                        Style="{StaticResource ModernButton}" Height="48"
                        IsEnabled="False" Opacity="0.5"
                        Click="CompleteButton_Click"/>
            </Grid>

        </Grid>
    </Border>
</Window>
